<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#0044AA"
        android:textColor="#000000"
        android:text="Edit Member" />
 
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="name" />
 
            <EditText
                android:id="@+id/edtFname"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
 
        </TableRow>
 
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="surname" />
 
            <EditText
                android:id="@+id/edtLname"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
 
        </TableRow>
 
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="age" />
 
            <EditText
                android:id="@+id/edtAge1"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
 
        </TableRow>
        
         <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="address" />
 
            <EditText
                android:id="@+id/edtAddress1"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            </TableRow>
          
          <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="blood" />
 
            <EditText
                android:id="@+id/edtBlood1"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            </TableRow>
            
           <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
 
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="weight" />
 
            <EditText
                android:id="@+id/edtWeight1"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            
             <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="height" />
 
            <EditText
                android:id="@+id/edtHeight1"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            </TableRow>
    </TableLayout>
 
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />
 
</LinearLayout>